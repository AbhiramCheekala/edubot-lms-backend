{
  "name": "edubot-lms-backend",
  "version": "0.0.1",
  "description": "Backend for Edubot-LMS",
  "main": "./src/index.ts",
  "repository": "https://github.com/7thtowertech/edubot-lms-backend.git",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test:build": "yarn build && node dist/index.js",
    "start": "yarn build && pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "testquery": "cross-env NODE_ENV=development tsx src/testdbquery.ts",
    "db:seed": "cross-env NODE_ENV=development tsx SampleData/seedDatabase.ts",
    "db:truncate": "cross-env NODE_ENV=development tsx SampleData/deleteAllData.ts",
    "db:seedCustom": "cross-env NODE_ENV=development tsx SampleData/customSeedScript.ts",
    "db:push": "yarn build && drizzle-kit push",
    "db:generate": "yarn build && drizzle-kit generate",
    "db:migrate": "yarn build && drizzle-kit migrate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "docker:dev-db:start": "docker-compose -f docker-compose.only-db-dev.yml up -d",
    "docker:dev-db:stop": "docker-compose -f docker-compose.only-db-dev.yml down",
    "build": "rimraf dist && tsc -p tsconfig.json"
  },
  "author": "Pranjal Gupta",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.14.11",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.23.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@azure/communication-email": "^1.0.0",
    "@azure/storage-blob": "^12.24.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^6.4.15",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.32.0",
    "drizzle-zod": "^0.5.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "file-type": "^19.5.0",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "joi": "^17.13.3",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
    "pm2": "^5.4.2",
    "tsx": "^4.19.0",
    "uuid": "^10.0.0",
    "winston": "^3.13.1"
  }
}
